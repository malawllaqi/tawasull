{
	"name": "tawasull",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:api": "turbo -F api dev",
		"db:push": "turbo -F @tawasull/db db:push",
		"db:studio": "turbo -F @tawasull/db db:studio",
		"db:generate": "turbo -F @tawasull/db db:generate",
		"db:migrate": "turbo -F @tawasull/db db:migrate",
		"docker:up": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build -d",
		"docker:down": "docker-compose down",
		"docker:prod:up": "docker-compose -f docker-compose.yml up --build -d",
		"docker:restart": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml  restart",
		"docker:logs": "docker-compose logs -f"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.4",
		"@types/node": "^22.13.11",
		"tsdown": "^0.15.5",
		"turbo": "^2.5.4",
		"ultracite": "6.3.2"
	},
	"packageManager": "pnpm@10.15.1"
}
